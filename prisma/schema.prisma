// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id            Int           @id @default(autoincrement())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  name          String
  availableCash Float
  transactions  Transaction[]
}

model Transaction {
  id                 Int     @id @default(autoincrement())
  registeredTime     BigInt
  executedTime       BigInt?
  success            Boolean
  cashAmount         Float
  destinationAccount Int
  sourceAccount      Int
  fromAccount        Account @relation(fields: [sourceAccount], references: [id])
}
